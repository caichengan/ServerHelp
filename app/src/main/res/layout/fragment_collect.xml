<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.xht.android.serverhelp.view.ClearEditText
        android:id="@+id/mCollectEdit"
        android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/green_stroke"
        android:drawableLeft="@drawable/sorlistview_search_bar_icon_normal"
        android:hint="请输入关键字"
        android:singleLine="true"
        android:textSize="15.0dip" />

    <TextView
        android:layout_width="match_parent"
        android:text="的图让他有人日的"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/mCollectList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
</LinearLayout>