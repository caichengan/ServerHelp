<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shbz1"
            android:background="@android:color/white">
                <TextView
                    android:id="@+id/buzhou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:text="步骤名称："
                    android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mHeMing"
            android:layout_toRightOf="@id/buzhou"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:text="企业核名"
            android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mOffice"
                    android:layout_toRightOf="@id/mHeMing"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:visibility="gone"
                    android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kssj1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/mHeMing"
            android:layout_marginLeft="8dp"
            android:text="开始时间："
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mStartTime"
            android:layout_alignTop="@id/kssj1"
            android:layout_toRightOf="@id/kssj1"
            android:text="2016-10-19 11:22:40"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/jssj1"
            android:layout_marginTop="10dp"
            android:layout_below="@id/kssj1"
            android:layout_marginLeft="8dp"
            android:text="结束时间："
            android:textSize="15sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mEndTime"
            android:layout_alignTop="@id/jssj1"
            android:layout_toRightOf="@id/jssj1"
            android:text="结束时间"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mUploadfile"
            android:layout_below="@id/jssj1"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:text="过程文件："
            android:padding="3dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mResultLoad"
            android:layout_below="@id/mUploadfile"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:text="结果文件："
            android:padding="3dp"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mOfficeStyle"
            android:layout_alignTop="@id/mUploadfile"
            android:layout_toRightOf="@id/mUploadfile"
            android:layout_marginLeft="10dp"
            android:text=""
            android:clickable="true"
            android:textSize="15sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/mImgFile"
            android:layout_alignTop="@id/mUploadfile"
            android:layout_toRightOf="@id/mOfficeStyle"
            android:layout_marginRight="3dp"
            android:text="上传图片"
            android:padding="5dp"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_background_circle"
           />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:id="@+id/mImgResult"
            android:layout_alignTop="@id/mResultLoad"
            android:layout_toRightOf="@id/mOfficeStyle"
            android:text="上传图片"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_background_circle"
            android:scaleType="fitXY"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mFollowPeople"
            android:layout_below="@id/mImgResult"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:text="跟进人员："
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mFollowName"
            android:layout_alignTop="@id/mFollowPeople"
            android:layout_toRightOf="@id/mFollowPeople"
            android:text=""
            android:textSize="15sp"/>
        <Button
            android:id="@+id/mSubmit_gx1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/mFollowPeople"
            android:layout_centerHorizontal="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textSize="15sp"
            android:text="提交审核"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_background_circle"/>
        <LinearLayout
            android:id="@+id/after_sub1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/mFollowPeople"
          >
            <TextView
                android:id="@+id/mCancel_rw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消任务"
                android:textSize="15sp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_background_circle"/>
            <TextView
                android:id="@+id/mContinue_rw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="继续任务"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:background="@drawable/btn_background_circle"/>
            <TextView
                android:id="@+id/mConver_rw1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="转交任务"
                android:textSize="15sp"
                android:paddingLeft="8dp"
                android:textColor="@android:color/white"
                android:paddingRight="8dp"
                android:background="@drawable/btn_background_circle"/>
        </LinearLayout>


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>
</LinearLayout>