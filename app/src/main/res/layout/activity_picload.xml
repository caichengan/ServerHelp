<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_11"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_12"
                android:layout_alignTop="@id/mImgFile_11"
                android:layout_toRightOf="@id/mImgFile_11"
                android:layout_margin="3dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_13"
                android:layout_alignTop="@id/mImgFile_11"
                android:layout_toRightOf="@id/mImgFile_12"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_14"
                android:layout_alignTop="@id/mImgFile_11"
                android:layout_toRightOf="@id/mImgFile_13"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_21"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:layout_margin="2dp"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_22"
                android:layout_alignTop="@id/mImgFile_21"
                android:layout_toRightOf="@id/mImgFile_21"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_23"
                android:layout_alignTop="@id/mImgFile_21"
                android:layout_toRightOf="@id/mImgFile_22"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="80dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/mImgFile_24"
                android:layout_alignTop="@id/mImgFile_21"
                android:layout_toRightOf="@id/mImgFile_22"
                android:layout_margin="2dp"
                android:scaleType="fitXY"
                android:visibility="invisible"
                android:background="@mipmap/ic_action_add"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnLoadPic"
            android:layout_width="90dp"
            android:text="上传"
            android:textSize="15sp"
            android:textColor="@android:color/white"
           android:background="@drawable/btn_background_circle"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>