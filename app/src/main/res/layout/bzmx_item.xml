<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/listitem_sel">

    <LinearLayout
        android:id="@+id/lin01"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/af_khTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"

                android:gravity="center"
                android:textSize="16sp"
                android:text="联系人："/>
            <TextView
                android:id="@+id/khTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/af_khTV"

                android:gravity="center"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/colorBlue"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin02"
        android:layout_below="@id/lin01"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/af_compTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@id/khTV"
                android:gravity="center"
                android:textSize="16sp"
                android:text="公司名："/>
            <TextView
                android:id="@+id/compTV"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_toRightOf="@id/af_compTV"
                android:layout_below="@id/khTV"
                android:gravity="center"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/timeTV"
        android:layout_below="@id/lin02"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"/>
    <TextView
        android:layout_below="@id/lin02"
        android:id="@+id/quyuTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"/>

</RelativeLayout>